{
    "manifest_version": 3,
    "name": "Check English Writing",
    "version": "1.0",
    "description": "Check English writing using ChatGPT and copy the annotated text to the clipboard.",
    "permissions": [
        "contextMenus",
        "clipboardWrite",
        "notifications",
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
          "resources": ["notification.wav"],
          "matches": ["<all_urls>"]
        }
      ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "action": {
        "default_icon": "icon48.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}